{
  "name": "@hyperse/vitest-coverage-reporter",
  "version": "1.0.0",
  "description": "Using gitHub action for creating markdown coverage report, badges from Istanbul json report",
  "keywords": [
    "hyperse",
    "reporter",
    "markdown",
    "coverage",
    "badges",
    "vitest",
    "github actions"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/vitest-coverage-reporter.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "generate-badges": "./bin/generate-badges.mjs"
  },
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "tsup",
    "changeset": "changeset",
    "cz": "cz",
    "lint": "eslint .",
    "lint-staged-files": "lint-staged --allow-empty",
    "prepare": "husky",
    "release": "yarn build && changeset publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "6.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.1.3",
    "common-tags": "1.8.2",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@hyperse/eslint-config-hyperse": "^1.1.0",
    "@semantic-release/exec": "6.0.3",
    "@types/common-tags": "1.8.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.1.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.8.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "semantic-release": "24.0.0",
    "semantic-release-github-actions-tags": "1.0.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.4.0"
}
